<h1>Task</h1>
<%= form_tag project_tasks_path, :method => "get" do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag("Search", :title => nil) %>
<% end %>
<% @taskss.each do |result| %>  
  <%= result.title %><br>  
<% end %>

<h1>Listing tasks</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Is done</th>
    
   
  </tr>
<% @tasks.each do |task| %>
  <tr>
    <td><%= task.title %></td>
    <td><%= task.description %></td>
    <td><%= task.is_done ? "Done" : "Not completed"%></td>
    <td><%= link_to 'Show', [task.project, task] %></td>
    <td><%= link_to 'Edit', edit_project_task_path(task.project, task) %></td>
    <td><%= link_to 'Destroy', [task.project, task], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Task', new_project_task_path(params[:project_id]), class: 'btn btn-info mb-4' %>
